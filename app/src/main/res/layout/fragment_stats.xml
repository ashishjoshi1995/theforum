<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#eeeeee">
            <TextView android:id="@+id/stats_frog_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#202020"
                android:text="Color: Red" />

            <TextView android:id="@+id/stats_color_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#878787"
                android:text="The frog you have will change its colour with time! This is based on your stats and points collected" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#24a5ff"
                    android:text="Received"
                    android:layout_marginBottom="16dp"/>
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_upvotes"
                            android:text="Upvotes"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"
                            />
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_upvotes_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"
                            />
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"

                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_downvotes"
                            android:text="Downvotes"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_downvotes_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"/>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_opinions"
                            android:text="Opinions"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_opinions_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"/>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_renewals"
                            android:text="Renewals"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/received_card_renewals_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"/>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/received_card_topics_renewed"
                        android:text="Topics Renewed"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"/>
                    <com.theforum.utils.views.customFont.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/received_card_topics_renewed_count"
                        android:layout_gravity="right"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        app:fontName="@string/roboto_medium"
                        android:textSize="18sp"
                        />

                </FrameLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#24a5ff"
                        android:text="Croaked"
                        android:layout_marginBottom="16dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_upvotes"
                            android:text="Upvotes"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_upvotes_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"
                            />
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_downvotes"
                            android:text="Downvotes"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_downvotes_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"/>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_opinions"
                            android:text="Opinions"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_opinions_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"
                            />
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_renewals"
                            android:text="Renewals"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_renewals_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"
                            />
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e0e0" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_renewed"
                            android:text="Topics Renewed"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"/>
                        <com.theforum.utils.views.customFont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/croaked_card_renewed_count"
                            android:layout_gravity="right"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            app:fontName="@string/roboto_medium"
                            android:textSize="18sp"
                            />
                    </FrameLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="theforum | speak free"
                android:gravity="center_horizontal"
                android:background="#00000000"
                android:id="@+id/footer"
                android:textSize="34sp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="8dp"
                android:textColor="#a7a7a7" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
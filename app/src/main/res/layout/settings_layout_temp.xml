<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_layout_location"
        android:text="Location:India"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="If you are not in this country, then turn on the Switch and we'll know the country you are in"
        android:id="@+id/settings_layout_location_instruction"
        />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_fragment_toggle_button"
        />

    </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_notification_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification"
                    android:id="@+id/settings_layout_notification_card_name"
                    />


                <CheckBox android:id="@+id/settings_layout_notification_upvotes_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upvotes Received"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    />
                <CheckBox android:id="@+id/settings_layout_notification_renewal_requests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Renewal Requests"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>
                <CheckBox android:id="@+id/settings_layout_notification_topic_renewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topic Renewed"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

                <CheckBox android:id="@+id/settings_layout_notification_opinions_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opinions Received"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_application_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Application"
                    android:id="@+id/settings_layout_application_card_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share the App"
                    android:id="@+id/settings_layout_application_share_the_app"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate Us"
                    android:id="@+id/settings_layout_application_rate_us"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:id="@+id/settings_layout_application_feedback"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:id="@+id/settings_layout_application_contact_us"
                    />



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/settings_legal_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legal"
                    android:id="@+id/settings_layout_legal_card_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service"
                    android:id="@+id/settings_layout_legal_terms_of_service"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:id="@+id/settings_layout_legal_privacy_policy"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyrights"
                    android:id="@+id/settings_layout_legal_copyrights"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            />


    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <Button
        android:id="@+id/profile_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Notifications" />

    <!-- status holder-->
    <FrameLayout
        android:id="@+id/profile_status_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_notification_btn"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/profile_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="14dp"
            android:scaleType="center"
            android:src="@drawable/status"
            android:background="@drawable/profile_circle_drawable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/status_header"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:id="@+id/profile_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:textSize="32sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:text="@string/action_settings"/>

    </FrameLayout>

    <!--points holder -->

    <FrameLayout
        android:id="@+id/profile_points_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_status_holder">

        <ImageView
            android:id="@+id/profile_points_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="14dp"
            android:scaleType="center"
            android:src="@drawable/points"
            android:background="@drawable/profile_circle_drawable"/>

        <TextView style="?android:listSeparatorTextViewStyle"
            android:id="@+id/profile_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:hint="Point Collected"
            android:textSize="32sp"
            android:textStyle="normal"
            android:textAllCaps="false"/>


    </FrameLayout>

    <!--topics holder-->
    <FrameLayout
        android:id="@+id/profile_topics_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_points_holder">
        <ImageView
            android:id="@+id/profile_topics_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="14dp"
            android:scaleType="center"
            android:src="@drawable/topics_created"
            android:background="@drawable/profile_circle_drawable"/>

        <TextView style="?android:listSeparatorTextViewStyle"
            android:id="@+id/profile_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:hint="Topics Created"
            android:textSize="32sp"
            android:textStyle="normal"
            android:textAllCaps="false"/>

    </FrameLayout>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/frog"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="-80dp" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding= "16dp">

    <TextView
        android:id="@+id/trends_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="#kejriwalandmodi"/>

    <LinearLayout
        android:id="@+id/trends_vote_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/trends_upvote_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:text="1254"/>
        <TextView
            android:id="@+id/trends_downvote_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="1254"/>
    </LinearLayout>
    <TextView
        android:id="@+id/trends_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trends_topic_name"
        android:layout_toLeftOf="@id/trends_vote_holder"
        android:textSize="20sp"
        android:text="@string/explore_message"/>
    <TextView
        android:id="@+id/trends_decay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trends_description"
        android:layout_marginTop="28dp"
        android:text="10hrs left to decay"/>

</RelativeLayout>
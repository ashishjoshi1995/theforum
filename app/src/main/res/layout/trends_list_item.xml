<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin">

    <com.theforum.utils.CustomFontTextView
        android:id="@+id/trends_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textSize="19sp"
        android:textColor="@color/blue"
        app:fontName="Roboto-Light.ttf"
        android:text="#kejriwalandmodi"/>

    <com.theforum.utils.CustomFontTextView
        android:id="@+id/trends_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trends_topic_name"
        android:layout_marginRight="72dp"
        android:textSize="16sp"
        android:paddingTop="1dp"
        app:fontName="Roboto-Light.ttf"
        android:text="@string/explore_message"/>

    <LinearLayout
        android:id="@+id/trends_vote_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@id/trends_description"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp">
        <TextView
            android:id="@+id/trends_upvote_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:clickable="true"
            android:text="1254"/>
        <TextView
            android:id="@+id/trends_downvote_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:clickable="true"
            android:text="1254"/>
    </LinearLayout>



    <TextView
        android:id="@+id/trends_decay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trends_description"
        android:layout_marginTop="27dp"
        android:textSize="12sp"
        android:text="10hrs left to decay"/>

</RelativeLayout>
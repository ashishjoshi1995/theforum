<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/toolbar"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView android:id="@+id/settings_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#202020" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/settings_location_instruction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#878787"
            android:text="If you are not in this country, then turn on the Switch and we'll know the country you are in"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_location_toggle_button" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#24a5ff"
                    android:text="Notifications"
                    android:layout_marginBottom="16dp"/>

                <CheckBox android:id="@+id/settings_notification_up_votes"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Upvotes Received"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    />

                <CheckBox android:id="@+id/settings_notification_renewal_requests"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Renewal Requests"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

                <CheckBox android:id="@+id/settings_notification_topic_renewed"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Topic Renewed"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

                <CheckBox android:id="@+id/settings_notification_opinions"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Opinions Received"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#24a5ff"
                    android:text="Application" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Share the App"
                    android:id="@+id/settings_application_share_app" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Rate Us"
                    android:id="@+id/settings_application_rate_us" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Feedback"
                    android:id="@+id/settings_application_feedback" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Contact Us"
                    android:id="@+id/settings_application_contact_us" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/settings_legal_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#24a5ff"
                    android:text="Legal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Terms of Service"
                    android:id="@+id/settings_legal_terms_of_service" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Privacy Policy"
                    android:id="@+id/settings_legal_privacy_policy" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="Copyrights"
                    android:id="@+id/settings_legal_copyrights" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="theforum | speak free"
                android:gravity="center_horizontal"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>